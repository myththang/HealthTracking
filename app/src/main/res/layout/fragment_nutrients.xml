                <ProgressBar
                    android:id="@+id/pbCarbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginBottom="16dp" />

                <!-- Fat -->
