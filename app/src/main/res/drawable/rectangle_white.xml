<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="@dimen/_16pxh"/> <!-- Same corner radius -->
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item android:top="4dp" android:left="4dp" android:right="0dp" android:bottom="0dp"> <!-- Offset for shadow -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Solid white background -->
            <corners android:radius="@dimen/_16pxh"/> <!-- Same corner radius -->
        </shape>
    </item>
</layer-list>
